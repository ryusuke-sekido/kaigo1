
<div class="record" >
 <h1>記録一覧画面</h1></div>
<%#日付で絞り込む %>
<div class="record-list">
<table border="1">
 <thead>
  <th>日付</th>
  <th>利用者名</th>
  <th>内容</th>
 </thead>

 <tbody>
  <tr>
   <% @records.each do |record| %>
   <td><%= record.created_at.strftime('%Y/%m/%d') %></td>
   <td><%= record.customer.last_name %><%= record.customer.first_name %></td>
   <td><%= record.body %></td>
  </tr>
   <% end %>
 </tbody>
</table>
</div>
