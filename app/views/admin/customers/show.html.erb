<div class="title">
 <h1>
   <%= @customer.last_name %>
   <%= @customer.first_name %>様の詳細画面
 </h1>
</div>

<div class="list">
 <table border="1">
  <thead>
   <th>年齢</th>
   <th>性別</th>
   <th>利用曜日</th>
   <th>介護度</th>
  </thead>
  <tbody>
   <tr>
    <td><%= @customer.age %>歳</td>
    <td><%= @customer.sex %></td>
    <td><%= @customer.day %>曜日</td>
    <td><%= @customer.care_number %></td>
   </tr>
  </tbody>
 </table>
</div><br>

<div class="list">
 <table border= "1">
  <thead>
   <th>参加予定日一覧</th>
   <%#<th>編集</th>
   <th>削除</th>%>
  </thead>
  <tbody>
   <% @schedules.each do |schedule| %>
   <td><%= schedule.plan %></td>
   <%#<td></td>
   <td><%= link_to '削除', admin_customer_schedule_path(@customer.id),
   method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tbody>
  <% end %>
 </table>
</div>

<div class= "link">
 <br><%= link_to "編集画面へ", edit_admin_customer_path(@customer.id) %>
</div>

<div class="title" >
 <h2>投稿一覧</h2>
</div>

<div class ="link">
 <%= @customer.last_name %><%= @customer.first_name %>様へ
 <%= link_to "新しく記録する", new_admin_customer_record_path(@customer.id) %><br>
</div>
 <div class="list" >
  <table border ="1" >
   <thead>
    <th>日付</th>
    <th>内容</th>
   </thead>
   <tbody>
    <tr>
     <% @records.each do |record| %>
     <td><%= record.created_at.strftime('%Y/%m/%d') %></td>
     <td><%= record.body %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
</div>
